<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_large">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/radius_default"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clReviewerIdentity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImageReviewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="@color/color_glossy_background">

                <ImageView
                    android:id="@+id/ivReviewer"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    android:background="@color/color_glossy_background" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/margin_xlarge"
                app:layout_constraintBottom_toBottomOf="@id/cvImageReviewer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cvImageReviewer"
                app:layout_constraintTop_toTopOf="@id/cvImageReviewer">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    android:layout_height="18dp"
                    app:cardBackgroundColor="@color/color_glossy_background"
                    app:cardCornerRadius="@dimen/radius_default"
                    app:strokeWidth="0dp"
                    app:layout_constraintStart_toEndOf="@id/ivMovie"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardBackgroundColor="@color/color_glossy_background"
                        app:cardCornerRadius="@dimen/radius_default"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@id/ivMovie"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/cvImageReviewer">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/margin_default"
                    app:cardBackgroundColor="@color/color_glossy_background"
                    app:cardCornerRadius="@dimen/radius_default"
                    app:strokeWidth="0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/margin_default"
                    app:cardBackgroundColor="@color/color_glossy_background"
                    app:cardCornerRadius="@dimen/radius_default"
                    app:strokeWidth="0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/margin_default"
                    app:cardBackgroundColor="@color/color_glossy_background"
                    app:cardCornerRadius="@dimen/radius_default"
                    app:strokeWidth="0dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>